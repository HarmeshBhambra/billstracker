<div class="page-header">
  <h3>Payment for
    <a href="/bills/<%= @payment.bill.id %>"><%= @payment.bill.name %></a>
  </h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Paid at</dt>
      <dd><%= @payment.paid_at.strftime('%B %e, %Y') %></dd>

      <dt>Amount paid</dt>
      <dd><%= number_to_currency(@payment.amount_paid) %></dd>

      <dt>Notes</dt>
      <dd><%= @payment.notes %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/payments" class="btn btn-primary">
        Back
      </a>
      <a href="/payments/<%= @payment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_payment/<%= @payment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<style>
  a {
    color: white;
  }
</style>

<div  class="page-header">
  <h1>
    Summary
  </h1>
</div>

<div class="container" class="page-header">
    <div class="row">
        <div class="col-sm-5">
          <ul class="list-group">
            <li class="list-group-item">
              <span class="badge">
              <%= @p %>
              </span>
              Number of bills fully paid
            </li>
          </ul>
        </div>
        <div class="col-sm-5">
          <ul class="list-group">
            <li class="list-group-item">
              <span class="badge">
              <%= current_user.bills.count - @p %>
              </span>
              Number of bills to be paid (in full)
            </li>
          </ul>
        </div>
    </div>
</div>

<hr>

<div name="calendar">
  <p class="lead">Calendar of Bills (monthly summary)</p>
  <div class="row">
  <form action="/">
    <div class="col-sm-10">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
        <div class="form-group">
          <select class="form-control" id="month" name="month">
            <option value="12">December</option>
            <option value="1">January</option>
            <option value="2">February</option>
            <option value="3">March</option>
            <option value="4">April</option>
          </select>
        </div>
    </div>
    <div class="col-sm-2">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <tr>
          <th colspan="2">#</th>
          <th colspan="2">Week 1</th>
          <th colspan="2">Week 2</th>
          <th colspan="2">Week 3</th>
          <th colspan="2">Week 4</th>
          <th colspan="2">Week 5</th>
        </tr>
        <% current_user.bills.each do |bill| %>
        <tr>
          <td colspan="2">
          <%= @n + 1 %>
          </td>
          <td colspan="2">
            <% if @week_1_bills_mon.include? bill %>
              <% @percentage_paid = (bill.payments.map{|item| item.amount_paid}.sum) / (bill.amount) %>
              <% if @percentage_paid != 1 %>
                <div class="alert alert-danger" role="alert">
                  <h6>
                  <a href="/bills/<%= bill.id %>">
                    <%= bill.name %>
                  </a>
                  <small>
                    <%= number_to_currency(bill.amount) %>
                  </small>
                  </h6>
                </div>
              <% else %>
                <div class="alert alert-success" role="alert">
                  <h6>
                  <a href="/bills/<%= bill.id %>">
                    <%= bill.name %>
                  </a>
                  <small>
                    <%= number_to_currency(bill.amount) %>
                  </small>
                  </h6>
                </div>
              <% end %>
            <% end %>
          </td>
          <td colspan="2">
            <% if (@week_2_bills_mon.include? bill) %>
            <% @percentage_paid = (bill.payments.map{|item| item.amount_paid}.sum) / (bill.amount) %>
            <% if @percentage_paid != 1 %>
              <div class="alert alert-danger" role="alert">
                <h6>
                <a href="/bills/<%= bill.id %>">
                  <%= bill.name %>
                </a>
                <small>
                  <%= number_to_currency(bill.amount) %>
                </small>
                </h6>
              </div>
            <% else %>
              <div class="alert alert-success" role="alert">
                <h6>
                <a href="/bills/<%= bill.id %>">
                  <%= bill.name %>
                </a>
                <small>
                  <%= number_to_currency(bill.amount) %>
                </small>
                </h6>
              </div>
            <% end %>
            <% end %>
          </td>
          <td colspan="2">
            <% if @week_3_bills_mon.include? bill %>
            <% @percentage_paid = (bill.payments.map{|item| item.amount_paid}.sum) / (bill.amount) %>
            <% if @percentage_paid != 1 %>
              <div class="alert alert-danger" role="alert">
                <h6>
                <a href="/bills/<%= bill.id %>">
                  <%= bill.name %>
                </a>
                <small>
                  <%= number_to_currency(bill.amount) %>
                </small>
                </h6>
              </div>
            <% else %>
              <div class="alert alert-success" role="alert">
                <h6>
                <a href="/bills/<%= bill.id %>">
                  <%= bill.name %>
                </a>
                <small>
                  <%= number_to_currency(bill.amount) %>
                </small>
                </h6>
              </div>
            <% end %>
            <% end %>
          </td>
          <td colspan="2">
            <% if @week_4_bills_mon.include? bill %>
            <% @percentage_paid = (bill.payments.map{|item| item.amount_paid}.sum) / (bill.amount) %>
            <% if @percentage_paid != 1 %>
              <div class="alert alert-danger" role="alert">
                <h6>
                <a href="/bills/<%= bill.id %>">
                  <%= bill.name %>
                </a>
                <small>
                  <%= number_to_currency(bill.amount) %>
                </small>
                </h6>
              </div>
            <% else %>
              <div class="alert alert-success" role="alert">
                <h6>
                <a href="/bills/<%= bill.id %>">
                  <%= bill.name %>
                </a>
                <small>
                  <%= number_to_currency(bill.amount) %>
                </small>
                </h6>
              </div>
            <% end %>
            <% end %>
          </td>
          <td colspan="2">
            <% if @week_5_bills_mon.include? bill %>
            <% @percentage_paid = (bill.payments.map{|item| item.amount_paid}.sum) / (bill.amount) %>
            <% if @percentage_paid != 1 %>
              <div class="alert alert-danger" role="alert">
                <h6>
                <a href="/bills/<%= bill.id %>">
                  <%= bill.name %>
                </a>
                <small>
                  <%= number_to_currency(bill.amount) %>
                </small>
                </h6>
              </div>
            <% else %>
              <div class="alert alert-success" role="alert">
                <h6>
                <a href="/bills/<%= bill.id %>">
                  <%= bill.name %>
                </a>
                <small>
                  <%= number_to_currency(bill.amount) %>
                </small>
                </h6>
              </div>
            <% end %>
            <% end %>
          </td>
        </tr>
        <% @n = @n + 1 %>
        <% end %>
        <tr>
          <td colspan="2">
            Subtotal
          </td>
          <td colspan="2">
            <div><%= number_to_currency(@week_1_bills_mon.map{|item| item.amount}.sum) %></div>
          </td>
          <td colspan="2">
            <div><%= number_to_currency(@week_2_bills_mon.map{|item| item.amount}.sum) %></div>
          </td>
          <td colspan="2">
            <div><%= number_to_currency(@week_3_bills_mon.map{|item| item.amount}.sum) %></div>
          </td>
          <td colspan="2">
            <div><%= number_to_currency(@week_4_bills_mon.map{|item| item.amount}.sum) %></div>
          </td>
          <td colspan="2">
            <div><%= number_to_currency(@week_5_bills_mon.map{|item| item.amount}.sum) %></div>
          </td>
        </tr>
        <tr>
          <td class="total">
            Total
          </td>
          <td colspan="12" class="total">
            <div><%= number_to_currency(@total_bills_mon.map{|item| item.amount}.sum) %></div>
          </td>
        </tr>
      </table>

    </div>
  </div>
</div>

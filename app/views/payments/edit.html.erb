<!-- Validation failure messages -->
<% if @payment.errors.any? %>
  <% @payment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Payment for:
  <a href="/bills/<%= @payment.bill.id %>"><%= @payment.bill.name %></a>
  </h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_payment/<%= @payment.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for paid_at -->
      <div class="form-group">
        <label for="paid_at" class="control-label">
          Paid at
        </label>

        <div class='input-group date' id='datetimepicker1'>
          <input type="text" id="paid_at" name="paid_at" placeholder="Paid at" class="form-control" value="<%= @payment.paid_at %>">
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>

      <!-- Label and input for amount_paid -->
      <div class="form-group">
        <label for="amount_paid" class="control-label">
          Amount paid
        </label>

        <input type="text" id="amount_paid" name="amount_paid" placeholder="Amount paid" class="form-control" value="<%= @payment.amount_paid %>">
      </div>

      <!-- Label and input for bill_id -->
      <div class="form-group">
        <label for="bill_id" class="control-label">
          Bill
        </label>

        <%= select_tag(:bill_id, options_from_collection_for_select(Bill.where({:user_id => current_user.id}), :id, :name, @payment.bill_id), :class => "form-control") %>
        <a href="/bills/new">or add a new bill</a>
      </div>

      <!-- Label and input for notes -->
      <div class="form-group">
        <label for="notes" class="control-label">
          Notes
        </label>

        <textarea id="notes" name="notes" placeholder="Notes" class="form-control" rows="3"><%= @payment.notes %></textarea>
      </div>

      <button class="btn btn-warning">
        Update Payment
      </button>
      or
      <a href="/payments/<%= @payment.id %>">Cancel</a>
    </form>
  </div>
</div>

<script type="text/javascript">
  $(function () {
    $('#datetimepicker1').datetimepicker({format: 'DD/MM/YYYY'});
  });
</script>

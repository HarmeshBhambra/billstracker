<div class="page-header">
  <h1>
    Bills
  </h1>
  <a href="/bills/new" class="btn btn-lg btn-success">New Bill</a>
</div>

<div class="search">
  <p class="lead">Search for Bills (by bill name)</p>
  <div class="col-md-10">
    <%= search_form_for @q do |f| %>
      <div class="form-group">
        <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Enter a few characters" %>
      </div>
  </div>
  <div class="col-md-2">
    <a href="/bills" class="btn btn-default btn-block">Clear filter</a>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th colspan="2">Name</th>
        <th colspan="2">Category</th>
        <th colspan="2">Company</th>
        <th colspan="2">Due at</th>
        <th colspan="2">Amount</th>
        <th colspan="2">Actions</th>
      </tr>

      <% @bills.each do |bill| %>
      <tr>
        <td colspan="2"><%= bill.name %></td>
        <td colspan="2"><%= bill.category.name %></td>
        <td colspan="2"><%= bill.company %></td>
        <td colspan="2"><%= bill.due_at.strftime('%B %e, %Y') %></td>
        <td colspan="2"><%= number_to_currency(bill.amount) %></td>
        <td colspan="2">
          <a href="/bills/<%= bill.id %>" class="btn btn-primary">Show</a>
          <a href="/bills/<%= bill.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bill/<%= bill.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="page-header">
  <h1>
    Summary
  </h1>
</div>

<div class="btn-group dropdown">
  <button class="btn btn-default btn-lg dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="dropdown_month">
    Month <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdown_month">
    <li>November</li>
    <li>December</li>
    <li>January</li>
  </ul>
</div>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>#</th>
        <th>Week 1</th>
        <th>Week 2</th>
        <th>Week 3</th>
        <th>Week 4</th>
        <th>Week 5</th>
      </tr>
      <% @bills.each do |bill| %>
      <tr>
        <td>
        <%= @n + 1 %>
        </td>
        <td>
          <% if bill.due_at.day.between?(1, 7) %>
          <%= bill.name %>
          <% end %>
        </td>
        <td>
          <% if bill.due_at.day.between?(8, 14) %>
          <%= bill.name %>
          <% end %>
        </td>
        <td>
          <% if bill.due_at.day.between?(15, 21) %>
          <%= bill.name %>
          <% end %>
        </td>
        <td>
          <% if bill.due_at.day.between?(22, 28) %>
          <%= bill.name %>
          <% end %>
        </td>
        <td>
          <% if bill.due_at.day.between?(29, 31) %>
          <%= bill.name %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

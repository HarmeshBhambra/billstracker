<div class="page-header">
  <h1>
    Bills
    <a href="/bills/new" class="btn btn-lg btn-success">New Bill</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image</th>
        <th>User</th>
        <th>Notes</th>
        <th>Recurring</th>
        <th>Due at</th>
        <th>Amount</th>
        <th>Category</th>
        <th>Company</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @bills.each do |bill| %>
      <tr>
        <td><img src="<%= bill.image %>" class="img-responsive"></td>
        <td><%= bill.user_id %></td>
        <td><%= bill.notes %></td>
        <td><%= bill.recurring %></td>
        <td><%= bill.due_at %></td>
        <td><%= bill.amount %></td>
        <td><%= bill.category %></td>
        <td><%= bill.company %></td>
        <td><%= bill.name %></td>
        <td>
          <a href="/bills/<%= bill.id %>" class="btn btn-primary">Show</a>
          <a href="/bills/<%= bill.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bill/<%= bill.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

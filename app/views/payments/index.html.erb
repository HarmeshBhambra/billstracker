<div class="page-header">
  <h1>
    Payments
  </h1>
  <a href="/payments/new" class="btn btn-lg btn-success">New Payment</a>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Bill</th>
        <th>Paid at</th>
        <th>Amount paid</th>
        <th>Actions</th>
      </tr>

      <% @payments.each do |payment| %>
      <% if payment.bill.user == current_user %>
      <tr>
        <td>
          <a href="/bills/<%= payment.bill_id %>">
            <%= payment.bill.name %>
          </a>
        <td><%= payment.paid_at.strftime('%B %e, %Y') %></td>
        <td><%= number_to_currency(payment.amount_paid) %></td>
        <td>
          <a href="/payments/<%= payment.id %>" class="btn btn-primary">Show</a>
          <a href="/payments/<%= payment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_payment/<%= payment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
</div>

<div class="page-header">
  <h3>Category: <%= @category.name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

  <!--     <dt>Number of bills</dt>
      <dd><%= @category.bills.map{|item| item.amount}.count %></dd> -->

      <ul>
        <% @category.bills.each do |bill| %>
        <% if bill.user == current_user %>
          <li>
            <a href="/bills/<%= bill.id %>"><%= bill.name %></a>
            : <%= number_to_currency(bill.amount) %>
          </li>
        <% end %>
        <% end %>
        </ul>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/categories" class="btn btn-primary">
        Back
      </a>
      <a href="/categories/<%= @category.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_category/<%= @category.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
